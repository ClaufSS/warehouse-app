
<%= form_with model: @order do |f| %>
  <div>
    <%= f.label :warehouse_id %>
    <%= f.collection_select :warehouse_id, @warehouses, :id, :full_description %>
  </div>

  <div>
    <%= f.label :supplier_id %>
    <%= f.collection_select :supplier_id , @suppliers, :id, :full_description %>
  </div>

  <div>
    <%= f.label :expected_delivery_date %>
    <%= f.date_field :expected_delivery_date %>
  </div>

  <%= f.submit 'Salvar' %>
<% end %>
