
<section>
  <% if @orders.any? %>
    <h2>
      <%= pluralize @orders.count, 'pedido encontrado', 'pedidos encontrados' %>
      para: <%= @query %>
    </h2>
  <% else %>
    <p>Não foi encontrado correspondência para: <%= @query %></p>
  <% end %>

  <%= @orders.each do |order| %>
    <div>
      <%= link_to order do %>
        <p>Código do pedido: <%= order.code %></p>
      <% end %>
      
      <p>Galpão destino: <%= order.warehouse.full_description %></p>
      <p>Fornecedor: <%= order.supplier.full_description %></p>
    </div>
  <% end %>

</section>
