
<section>
  <div>
    <h2><%= Order.model_name.human %> <%= @order.code %></h2>
    
    <div>
      <p><%= Warehouse.model_name.human %>: <%= @order.warehouse.full_description %></p>
    </div>

    <div>
      <p><%= Supplier.model_name.human %>: <%= @order.supplier.full_description %></p>
    </div>
      
    <div>
      <p><%= Order.human_attribute_name :user %>: <%= @order.user.name %></p>
    </div>

    <div>
      <p><%= t :user_contact %>: <%= @order.user.email %></p>
    </div>
    
    <div>
      <p><%= Order.human_attribute_name :expected_delivery_date %>: <%= l @order.expected_delivery_date %></p>
    </div>

    <div>
      <p><%= Order.human_attribute_name :status %>: <%= t @order.status %></p>
    </div>
    
  </div>

  <div>
    <%= button_to 'Marcar como ENTREGUE', delivered_order_path, method: :post %>
    <%= button_to 'Marcar como CANCELADO', canceled_order_path, method: :post %>

    <%= link_to "Editar", edit_order_path %>
  </div>

  <div>
    <h3>Itens do pedido</h3>

    <% @order.order_items.each do |item| %>
      <p><%= item.quantity %> x <%= item.product_model.name %></p>
    <% end %>
  </div>
</section>
